const winston = require('winston');

const userLogger = winston.createLogger({
  level: 'info',
  transports: [
    new winston.transports.File({ filename: 'logs/user.log', level: 'info' })
  ]
});

function logUserAction(userId, action) {
  userLogger.info(`Usuario ${userId} ha realizado la acción: ${action}`);
}

module.exports = logUserAction;

// Ejemplo de uso
logUserAction('usuario123', 'registro');
logUserAction('usuario123', 'inicio de sesión');
